<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dark_theme_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/defaultTopPadding"
        android:paddingLeft="@dimen/defaultSidePadding"
        android:paddingTop="@dimen/defaultTopPadding"
        android:text="@string/dark_theme"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/dark_theme_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/defaultTopPadding"
        android:paddingRight="@dimen/defaultSidePadding"
        android:paddingTop="@dimen/defaultTopPadding" />

</RelativeLayout>