<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/defaultTopPadding"
        android:paddingLeft="@dimen/defaultSidePadding"
        android:paddingTop="@dimen/defaultTopPadding"
        android:text="@string/immersive"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <CheckBox
        android:id="@+id/immersive_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingBottom="@dimen/defaultTopPadding"
        android:paddingRight="@dimen/defaultSidePadding"
        android:paddingTop="@dimen/defaultTopPadding" />

</RelativeLayout>