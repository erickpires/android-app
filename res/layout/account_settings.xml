<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp" 
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android:paddingBottom="@dimen/defaultTopPadding"
            android:paddingLeft="@dimen/defaultSidePadding"
            android:paddingTop="@dimen/defaultTopPadding"
            android1:text="@string/choose_installation"
            android1:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical" >

            <RadioGroup
                android1:id="@+id/radioGroupServerType"
                android1:layout_width="wrap_content"
                android1:layout_height="wrap_content" >

                <RadioButton
                    android1:id="@+id/radioFramabag"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:checked="true"
                    android1:paddingLeft="@dimen/defaultSidePadding"
                    android1:text="@string/framabag" />

                <RadioButton
                    android1:id="@+id/radioAnotherServer"
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android1:paddingLeft="@dimen/defaultSidePadding"
                    android1:text="@string/another_sever" />
            </RadioGroup>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divider" />

        <LinearLayout
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:orientation="vertical" >

            <LinearLayout
                android1:id="@+id/server_url_layout"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:orientation="vertical" >

                <TextView
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultTopPadding"
                    android1:text="@string/server_url"
                    android1:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android1:id="@+id/editTextServerUrl"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content"
                    android1:ems="10"
                    android1:inputType="textUri" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/user_name_layout"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:orientation="vertical" >

                <TextView
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultTopPadding"
                    android1:text="@string/user_name"
                    android1:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android1:id="@+id/editTextUsername"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content"
                    android1:ems="10"
                    android1:inputType="text" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android1:id="@+id/user_id_layout"
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:orientation="vertical" >

                <TextView
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultTopPadding"
                    android1:text="@string/user_id"
                    android1:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android1:id="@+id/editTextUserID"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content"
                    android1:ems="10"
                    android1:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android1:layout_width="match_parent"
                android1:layout_height="wrap_content"
                android1:orientation="vertical" >

                <TextView
                    android1:layout_width="wrap_content"
                    android1:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultTopPadding"
                    android1:text="@string/token"
                    android1:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
                    android1:id="@+id/editTextToken"
                    android1:layout_width="match_parent"
                    android1:layout_height="wrap_content"
                    android1:ems="10"
                    android1:inputType="text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>